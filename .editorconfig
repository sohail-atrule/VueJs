# EditorConfig configuration for Service Provider Management System frontend
# https://editorconfig.org

# top-most EditorConfig file
root = false

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

# TypeScript, JavaScript, and Vue files
[*.{ts,tsx,js,jsx,vue}]
indent_style = space
indent_size = 2
max_line_length = 100
quote_type = single
semi = false
trailing_comma = es5

# Config files (JSON, YAML, etc)
[*.{json,yml,yaml,html,css,scss}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off